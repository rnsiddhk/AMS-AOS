                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:src="@drawable/ic_launcher"
                            android:visibility="gone" />
                    </LinearLayout>
                    <!-- 기기좌측 끝 -->


                    <!-- 기기우측 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="기기우측"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txt_data3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="미등록"
                                android:textColor="@color/Red"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btn_picture3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/selector_btn_comm"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="사진첨부"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:src="@drawable/ic_launcher"
                            android:visibility="gone" />
                    </LinearLayout>
                    <!-- 기기우측 끝 -->


                    <!-- 간판사진 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="간판사진"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txt_data4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="미등록"
                                android:textColor="@color/Red"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btn_picture4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/selector_btn_comm"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="사진첨부"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:src="@drawable/ic_launcher"
                            android:visibility="gone" />
                    </LinearLayout>
                    <!-- 간판사진 끝 -->


                    <!-- 내부상단 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="내부상단"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txt_data5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="미등록"
                                android:textColor="@color/Red"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btn_picture5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/selector_btn_comm"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="사진첨부"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:src="@drawable/ic_launcher"
                            android:visibility="gone" />
                    </LinearLayout>
                    <!-- 내부상단 끝 -->


                    <!-- 내부하단 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="내부하단"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txt_data6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="미등록"
                                android:textColor="@color/Red"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btn_picture6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/selector_btn_comm"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="사진첨부"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:src="@drawable/ic_launcher"
                            android:visibility="gone" />
                    </LinearLayout>
                    <!-- 내부하단 끝 -->


                    <!-- 점포정면 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="점포정면"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txt_data7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="미등록"
                                android:textColor="@color/Red"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btn_picture7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/selector_btn_comm"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="사진첨부"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img7"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:src="@drawable/ic_launcher"
                            android:visibility="gone" />
                    </LinearLayout>
                    <!-- 점포정면 끝 -->


                    <!-- 기타등등 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="기타등등"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txt_data8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="미등록"
                                android:textColor="@color/Red"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btn_picture8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/selector_btn_comm"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="사진첨부"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img8"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:src="@drawable/ic_launcher"
                            android:visibility="gone" />
                    </LinearLayout>
                    <!-- 기타등등 끝 -->


                    <!-- 점검유형/특이사항 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/gradient_transparent_linear2"
                        android:orientation="vertical" >

                        <!-- 점검유형 시작 -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/LightGrey"
                                android:gravity="center_vertical|center_horizontal|left"
                                android:paddingLeft="5dp"
                                android:text="점검유형" />

                            <Spinner
                                android:id="@+id/sp_gb"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
