<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- top view 시작 -->

    <include
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/top_view" />
    <!-- top view 끝 -->

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <!-- 메인 컨텐츠 시작 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:orientation="vertical" >

                <!-- 첫번째 상단 내용 시작 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/gradient_transparent_linear"
                    android:orientation="vertical" >

                    <!-- 기기명 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/gradient_gray_linear"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="기기명"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal|left"
                            android:text="CU 강북송천점"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <!-- 기기명 끝 -->


                    <!-- 기기번호 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/gradient_gray_linear"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="기기번호"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_sn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal|left"
                            android:text="10420682"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <!-- 기기번호 끝 -->


                    <!-- 기기등급 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:background="@drawable/gradient_gray_linear"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="기기등급"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_grade"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/icon_grade_0"
                            android:gravity="center_vertical|center_horizontal|left" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.9" />
                    </LinearLayout>
                    <!-- 기기등급 끝 -->


                    <!-- 발생시간 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/gradient_gray_linear"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="발생시간"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal|left"
                            android:text="2016/08/19 10:10:10"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <!-- 발생시간 끝 -->
                    <!-- 장애유형 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/gradient_gray_linear"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="장애유형"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal|left"
                            android:text="기기관련"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!-- 장애유형 끝 -->
                    <!-- 요청내용 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="2.5"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/gradient_gray_linear"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="요청내용"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_request"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal|left"
                            android:text="ATM문열림(상단)입니다. 점검부탁드립니다.점검부탁드립니다.점검부탁드립니다."
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!-- 요청내용 끝 -->
                    <!-- 연락처 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/gradient_gray_linear"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="연락처"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_phone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal|left"
                            android:text="010-1234-4567"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <!-- 연락처 끝 -->
                    <!-- 기기위치 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/gradient_gray_linear"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="기기위치"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_location"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal|left"
                            android:text="서울 강북구 삼양로 24길 45"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!-- 기기위치 끝 -->


                    <!-- 첫번째 버튼 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/btn_map"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_comm"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="지도보기"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btn_route"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_comm"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="경로보기"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btn_dev_info"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_comm"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="기기정보"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <!-- 첫번째 버튼 끝 -->
                    <!-- 두번째 버튼 시작 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/btn_issue_list"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_comm"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="장애이력"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btn_currency_info"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_comm"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="시재정보"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <!-- 두번째 버튼 끝 -->

                </LinearLayout>
                <!-- 첫번째 상단 내용 끝 -->
            </LinearLayout>

            <!-- 조치내역 시작 -->

            <LinearLayout
                android:id="@+id/ll_issue_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradient_transparent_linear"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/gradient_gray_linear"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="조치내역"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
            <!-- 조치내역 끝 -->


            <!-- 두번째 내용 시작 -->

            <LinearLayout
                android:id="@+id/ll_repair"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_transparent_linear"
                android:orientation="vertical" >

                <!-- 조치 시작 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/gradient_gray_linear"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="조치"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_picutre"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_comm"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="사진첨부"
                        android:textSize="18sp" />
                </LinearLayout>
                <!-- 조치 끝 -->


                <!-- 조치 입력 시작-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 도착예정 시작 -->

                    <LinearLayout
                        android:id="@+id/ll_time_line"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/gradient_gray_linear"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="도착예정"
                            android:textSize="18sp" />

                        <Spinner
                            android:id="@+id/sp_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/dropdown"
                            android:gravity="center_vertical|center_horizontal|left"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <!-- 도착예정 끝 -->

                    <!-- 도착 예정시간 -->
                    <TextView
                        android:id="@+id/txt_time_alert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/Blue"
                        android:text="Wating Time"
                        android:visibility="gone" />

                    <!-- 처리결과 시작-->
                    <LinearLayout
                        android:id="@+id/ll_result"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/gradient_gray_linear"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="처리결과"
                            android:textSize="18sp" />

                        <Spinner
                            android:id="@+id/sp_result"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/dropdown"
                            android:gravity="center_vertical|center_horizontal|left"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <!-- 처리결과 끝 -->

                    <!-- 이관업체 시작-->
                    <LinearLayout
                        android:id="@+id/ll_company"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/gradient_gray_linear"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="이관업체"
                            android:textSize="18sp" />

                        <Spinner
                            android:id="@+id/sp_company"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/dropdown"
                            android:gravity="center_vertical|center_horizontal|left"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <!-- 처리결과 끝 -->

                    <!-- 조치내역 시작-->
                    <LinearLayout
                        android:id="@+id/ll_memo"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/gradient_gray_linear"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="조치내역"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/edt_result"
                            android:layout_width="0dp"
                            android:scrollbars="vertical"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:hint="조치내역을 입력하세요."
                            android:background="@drawable/gradient_transparent_linear2"
                            android:gravity="left"
                            android:inputType="textMultiLine"
                            android:paddingLeft="2dp"
                            android:paddingTop="5dp"
                            android:textStyle="bold"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!-- 조치내역 끝 -->

                </LinearLayout>

                <!-- 조치 입력 끝-->

                <!-- 사진첨부 레이아웃 시작 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <!-- 사진첨부 영역 -->
                    <LinearLayout
                        android:id="@+id/ll_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/img_thum"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="2" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <Button
                                android:id="@+id/btn_camera"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/selector_btn_comm"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="카메라"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btn_album"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/selector_btn_comm"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="사진첩"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btn_delete"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/selector_btn_comm"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="삭제"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 사진첨부 영역 -->

                </LinearLayout>
                <!-- 사진첨부 레이아웃 끝 -->

                <!-- 세번째 버튼 시작 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_comm"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="시간변경"
                        android:visibility="gone"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_regist"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_comm"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="접수"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_comm"
                        android:gravity="center_vertical|center_horizontal"
